@echo off
setlocal
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
:: Call VIM on WSL with file name
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: Process :::
set path_of_file=%~dp1

if "%1%"=="" (
  wt -d "%UserProfile%" wsl vim
) else (
  wt -d "%path_of_file:~0,-1%" wsl vim "%~nx1"
)
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
endlocal
exit 0
